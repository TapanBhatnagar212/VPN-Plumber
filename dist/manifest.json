{
  "manifest_version": 3,
  "name": "VPN Plumber",
  "version": "1.0",
  "description": "An extension to keep you aware of your IPv6 Leaks and Domain Name Server Leaks.",
  "permissions": [
    "<all_urls>",
    "notifications",
    "system.network"
  ],
  "action": {
    "default_icon": "img.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "img16.png",
    "48": "img48.png",
    "128": "img.png"
  }
}